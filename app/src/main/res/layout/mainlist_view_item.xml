<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:background="@color/white_blue"
    android:clickable="true"
    android:id="@+id/itemClikibleLayout">

    <ImageButton
        android:id="@+id/addFavoriteButton"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_star_list">
    </ImageButton>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/text_color"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="link name"
            android:id="@+id/itemLinkName">
        </TextView>

        <TextView
            android:textColor="@color/text_color"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="link topic"
            android:id="@+id/itemLinkTopic">
        </TextView>

    </LinearLayout>

    <TextView
        android:textColor="@color/text_color"
        android:textAlignment="textEnd"
        android:layout_marginRight="10dp"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="12dp"
        android:layout_marginTop="60dp"
        android:id="@+id/itemLinkDate">
    </TextView>

</LinearLayout>